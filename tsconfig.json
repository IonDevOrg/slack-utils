{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es2015",
        "lib": ["es2017", "es7", "es6", "dom"],
        "declaration": true,
        "outDir": "./dist",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "*": ["*", "src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/test.ts",
        "node_modules",
        "dist"
    ]
}